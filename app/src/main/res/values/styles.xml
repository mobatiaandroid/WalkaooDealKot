<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->

    <style name="textstyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="textstyleDialog" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="textstyleTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="textstyleWhite" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- Transparent dialog -->
    <style name="TransparentProgressDialog" parent="@android:Theme.Dialog" tools:ignore="ResourceCycle">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PopupMenuStyle" parent="@android:Widget.Holo.Light.ListPopupWindow" tools:ignore="ResourceCycle">
        <item name="android:popupBackground">@color/home_list_color</item>
    </style>

    <style name="menuCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/list_item_title</item>
    </style>

    <!-- Change Overflow Menu ListView Divider Property -->
    <style name="PopupMenuListView" parent="@android:Widget.Holo.Light.ListPopupWindow" tools:ignore="ResourceCycle">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@drawable/line</item>
        <item name="android:selectableItemBackground">@drawable/drawer_list_selection</item>
    </style>

</resources>