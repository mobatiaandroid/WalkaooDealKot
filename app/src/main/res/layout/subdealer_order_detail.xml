<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textViewProductId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="Product ID"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewSubOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewProductId"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="Order date"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSubOrderDate"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewDescription"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:text="Applied Quantity :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="visible" />
        <TextView
            android:id="@+id/textViewCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewQuantity"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:text="Case :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="visible" />
        
        <TextView
            android:id="@+id/textViewApprovedQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCase"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:text="Approved Quantity :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="bottom"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" 
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageViewSearch"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/searchbutton" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Update"
                android:textSize="12sp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edtQuantity"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewApprovedQuantity"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/textViewApprovedQuantity"
            android:background="@drawable/rectangle_box"
            android:clickable="true"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
             />
        
    </RelativeLayout>

</RelativeLayout>